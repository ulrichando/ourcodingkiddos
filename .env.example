# ================================================
# Our Coding Kiddos - Environment Variables
# ================================================
# Copy this file to .env and update with your values
# SECURITY: Never commit .env to version control!

# ================================================
# DATABASE
# ================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/ourcodingkiddos"

# ================================================
# AUTHENTICATION (NextAuth.js)
# ================================================
# Generate a random secret with: openssl rand -base64 32
# IMPORTANT: Use a strong, unique secret in production!
NEXTAUTH_SECRET="replace-me-with-random-32-char-secret"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# ================================================
# EMAIL PROVIDER (Optional)
# ================================================
# Enable passwordless email login
# SMTP server configuration
# Example for Gmail: smtp://username@gmail.com:app-password@smtp.gmail.com:587
# EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
# EMAIL_FROM="noreply@ourcodingkiddos.com"

# ================================================
# OAUTH PROVIDERS (Optional)
# ================================================
# Google OAuth (if using Google sign-in)
GOOGLE_CLIENT_ID="replace-me"
GOOGLE_CLIENT_SECRET="replace-me"

# ================================================
# PAYMENT PROCESSING (Optional)
# ================================================
# Stripe API keys for subscription management
STRIPE_SECRET_KEY="replace-me"
STRIPE_WEBHOOK_SECRET="replace-me"

# ================================================
# DEMO MODE CREDENTIALS
# ================================================
# Pre-configured demo accounts for testing
# WARNING: Change these in production!
DEMO_ADMIN_EMAIL="demo@ourcodingkiddos.com"
DEMO_ADMIN_PASSWORD="demo1234"
DEMO_PARENT_EMAIL="demo.parent@ourcodingkiddos.com"
DEMO_INSTRUCTOR_EMAIL="demo.instructor@ourcodingkiddos.com"
DEMO_STUDENT_EMAIL="demo.student@ourcodingkiddos.com"
DEMO_USER_PASSWORD="demo1234"

# ================================================
# APPLICATION SETTINGS
# ================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================================
# OPTIONAL FEATURES
# ================================================
# Analytics (Google Analytics)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Feature Flags
# ENABLE_CHATBOT="true"
# ENABLE_PLAYGROUND="true"
