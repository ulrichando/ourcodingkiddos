# ================================================
# Our Coding Kiddos - Environment Variables
# ================================================
# Copy this file to .env and update with your values
# SECURITY: Never commit .env to version control!

# ================================================
# DATABASE
# ================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/ourcodingkiddos"

# ================================================
# AUTHENTICATION (NextAuth.js)
# ================================================
# Generate a random secret with: openssl rand -base64 32
# IMPORTANT: Use a strong, unique secret in production!
NEXTAUTH_SECRET="replace-me-with-random-32-char-secret"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# ================================================
# EMAIL PROVIDER (Resend)
# ================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."

# From email address (must be verified domain in Resend)
# Avoid "noreply@" - it decreases trust and spam reputation
EMAIL_FROM="Our Coding Kiddos <hello@ourcodingkiddos.com>"

# Support email for contact forms and public-facing communications
SUPPORT_EMAIL="support@ourcodingkiddos.com"

# Reply-To email - where replies to system emails go (e.g., welcome, password reset)
EMAIL_REPLY_TO="ulrich@ourcodingkiddos.com"

# ================================================
# MAGIC LINK SIGN-IN (SMTP via Resend)
# ================================================
# Required for passwordless "magic link" authentication
# Uses Resend's SMTP gateway - same API key as above
EMAIL_SERVER_HOST="smtp.resend.com"
EMAIL_SERVER_PORT=465
EMAIL_SERVER_USER="resend"
EMAIL_SERVER_PASSWORD="re_..."

# ================================================
# OAUTH PROVIDERS (Optional)
# ================================================
# Google OAuth (if using Google sign-in)
GOOGLE_CLIENT_ID="replace-me"
GOOGLE_CLIENT_SECRET="replace-me"

# ================================================
# PAYMENT PROCESSING (Stripe)
# ================================================
# Get these from: https://dashboard.stripe.com/apikeys
# Stripe Secret Key (server-side only)
STRIPE_SECRET_KEY="sk_test_..."

# Stripe Publishable Key (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Webhook Secret (from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create products in Stripe dashboard)
# Free Trial Price ID (7-day trial)
STRIPE_FREE_TRIAL_PRICE_ID="price_..."

# Monthly Plan Price ID ($29/month)
STRIPE_MONTHLY_PRICE_ID="price_..."

# Family Plan Price ID ($49/month for up to 3 students)
STRIPE_FAMILY_PRICE_ID="price_..."

# ================================================
# APPLICATION SETTINGS
# ================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Maintenance Mode (set to "true" to enable site-wide maintenance mode)
# Note: Admins can still access the site during maintenance mode
# MAINTENANCE_MODE="false"

# ================================================
# RATE LIMITING (Production - Upstash Redis)
# ================================================
# Get these from: https://console.upstash.com/redis
# UPSTASH_REDIS_REST_URL="https://..."
# UPSTASH_REDIS_REST_TOKEN="..."

# ================================================
# OPTIONAL FEATURES
# ================================================
# Analytics (Google Analytics)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Feature Flags
# ENABLE_CHATBOT="true"
# ENABLE_PLAYGROUND="true"
